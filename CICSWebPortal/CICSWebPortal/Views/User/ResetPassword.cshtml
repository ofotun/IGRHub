@model CICSWebPortal.ViewModels.UserViewModel

@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}
@using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new
{
    @class = "form-horizontal",
    role = "form",
    @id = "regForm",

}))
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        @Html.HiddenFor(model => model.UserId)
        <div class="modal-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Reset Password for @Model.Email</h4>
            </div>
            <div class="modal-body" style="padding-left:50px;padding-right:50px;">

                <h3>Do you really want to Reset this User's Password?</h3>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button type="submit" class="btn btn-primary" id="btnReset">Yes</button>
            </div>
        </div>
</div>
}