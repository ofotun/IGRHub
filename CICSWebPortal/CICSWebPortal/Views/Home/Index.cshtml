@model CICSWebPortal.Models.Dashboard
@{
    ViewBag.Title = "Home Page";
    string displayStyle = string.Empty;
}

<div id="breadcrumb">
    <ul class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="#"> Home</a></li>
        <li class="active">Dashboard</li>
    </ul>
</div><!-- /breadcrumb-->
<div class="main-header clearfix">
    <div class="page-title">
        <h3 class="no-margin">Dashboard 
        <a href="/Report/ExecutiveDashboard/" class="btn btn-primary">View Executive Dashboard</a>
            <a href="/Report/PeriodicDashBoard/" class="btn bg-danger">View Agent Positions</a>
        </h3>
    </div><!-- /page-title -->
</div><!-- /main-header -->

@{displayStyle = string.Empty; if (Convert.ToInt32(Session["RoleID"]) == 2 || Convert.ToInt32(Session["RoleID"]) == 4 || Convert.ToInt32(Session["RoleID"]) == 6) { displayStyle = "display: none"; } }
<div class="grey-container main-header clearfix" style="margin:0 10px 10px 0; @displayStyle">

    <a href="/User/" class="shortcut-link">
        <span class="shortcut-icon">
            <i class="fa fa-user"></i>
        </span>
        <span class="text">Users</span>
    </a>
    @{ displayStyle = string.Empty; if (Convert.ToInt32(Session["RoleID"]) > 2) { displayStyle = "display: none"; } }
    <a style="@displayStyle" href="/Notification/" class="shortcut-link">
        <span class="shortcut-icon">
            <i class="fa fa-user"></i>
        </span>
        <span class="text">Notifications</span>
    </a>
    @{ displayStyle = string.Empty; if (Convert.ToInt32(Session["RoleID"]) > 2) { displayStyle = "display: none"; } }
    <a style="@displayStyle" href="/AuditTrail/" class="shortcut-link">
        <span class="shortcut-icon">
            <i class="fa fa-search"></i>
        </span>
        <span class="text">AuditTrails</span>
    </a>
</div
><!-- /grey-container -->

<div class="padding-md">

    @{displayStyle = string.Empty; if (Convert.ToInt32(Session["RoleID"]) > 2) { displayStyle = "display: none"; } }
    <div class="panel-stat3 bg-success col-md-3" style="margin:0 10px 10px 0; @displayStyle">
        <a href="/Client/">
            <h4 class="m-top-none" id="userCount">[ @Model.TotalClient ]</h4>
            <h5>Clients</h5>

            <div class="stat-icon">
                <i class="fa fa-bar-chart-o fa-3x"></i>
            </div>
            <div class="refresh-button">
                <i class="fa fa-refresh"></i>
            </div>
            <div class="loading-overlay">
                <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
            </div>
        </a>
    </div>
    @{displayStyle = string.Empty; if (Convert.ToInt32(Session["RoleID"]) > 4) { displayStyle = "display: none"; } }
    <div class="panel-stat3 bg-success col-md-3" style="margin:0 10px 10px 0; @displayStyle">
        <h4 class="m-top-none"><span id="serverloadCount">[ @Model.TotalAgent ]</span></h4>
        <h5>Agents</h5>

        <div class="stat-icon">
            <i class="fa fa-bar-chart-o fa-3x"></i>
        </div>
        <div class="refresh-button">
            <i class="fa fa-refresh"></i>
        </div>
        <div class="loading-overlay">
            <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
        </div>
    </div>

    <div class="panel-stat3 bg-success col-md-3" style="margin:0 10px 10px 0;">
        <h4 class="m-top-none" id="orderCount">[ @Model.TotalTerminal ]</h4>
        <h5>Terminals</h5>

        <div class="stat-icon">
            <i class="fa fa-bar-chart-o fa-3x"></i>
        </div>
        <div class="refresh-button">
            <i class="fa fa-refresh"></i>
        </div>
        <div class="loading-overlay">
            <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
        </div>
    </div>

    <div class="panel-stat3 bg-success col-md-3" style="margin:0 10px 10px 0;">
        <h4 class="m-top-none" id="visitorCount">[ @Model.TotalTransaction ]</h4>
        <h5>Transactions</h5>

        <div class="stat-icon">
            <i class="fa fa-bar-chart-o fa-3x"></i>
        </div>
        <div class="refresh-button">
            <i class="fa fa-refresh"></i>
        </div>
        <div class="loading-overlay">
            <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
        </div>
    </div>

    <div class="panel-stat3 bg-success col-md-3" style="margin:0 10px 10px 0;">
        <h4 class="m-top-none" id="orderCount">[ ₦@Model.TransctionValue.ToString("#,0.00") ]</h4>
        <h5>Transaction Value</h5>

        <div class="stat-icon">
            <i class="fa fa-bar-chart-o fa-3x"></i>
        </div>
        <div class="refresh-button">
            <i class="fa fa-refresh"></i>
        </div>
        <div class="loading-overlay">
            <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
        </div>
    </div>

    @{displayStyle = string.Empty; if (Convert.ToInt32(Session["RoleID"]) > 2) { displayStyle = "display: none"; } }
    <div class="panel-stat3 bg-success col-md-3" style="margin:0 10px 10px 0; @displayStyle">
        <h4 class="m-top-none" id="visitorCount">[ @Model.TotalNotifications ]</h4>
        <h5>Notifications</h5>

        <div class="stat-icon">
            <i class="fa fa-bar-chart-o fa-3x"></i>
        </div>
        <div class="refresh-button">
            <i class="fa fa-refresh"></i>
        </div>
        <div class="loading-overlay">
            <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
        </div>
    </div>
</div>