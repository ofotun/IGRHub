@model CICSWebPortal.Models.Transaction
@{
    ViewBag.Title = "Transaction Receipt";
    Layout = null;

}

<table class="table table-striped" id="dataTable1">

    @if (Model.TransactionCode == null)
    {
        <thead>
            <tr>
                <th colspan="2">
                    <span>No record found for the Transaction Code.</span>
                </th>
            </tr>
        </thead>
    }
    else
    {
        <tbody>
            <tr><th>ResidentID </th> <td>@Model.ResidentId</td></tr>
            <tr><th>Transaction Code</th> <td>@Model.TransactionCode</td></tr>
            <tr><th>Agent</th> <td>@Model.AgentName</td></tr>
            <tr><th>Payment Details</th> <td>@Model.RevenueName |@Model.RevenueHead | @Model.Ministry</td></tr>
            <tr><th>Payment Reference</th> <td>@Model.PaymentReference</td></tr>
            <tr><th>Amount</th> <td>@Model.Amount</td> </tr>
            <tr><th>First Name</th> <td>@Model.FirstName</td></tr>
            <tr><th>Middle Name</th> <td>@Model.MiddleName</td></tr>
            <tr><th>Surname</th> <td>@Model.LastName</td></tr>
            <tr><th>Email</th> <td>@Model.Email</td></tr>
            <tr><th>Phone</th> <td>@Model.PhoneNumber</td> </tr>
            <tr><th>Address</th> <td>@Model.Address</td></tr>
            <tr><th>Transaction Date</th> <td>@Model.TransactionDate</td> </tr>
        </tbody>
    }
</table>
